<div class="wrapper_shadow">
    <div class="flash"><%= @error_message %></div>
    <div class="user_">
        <div class="container_shadow">
            <%= form_tag("/login") do %>
              <h2>ログイン</h2>
              <div class="user_login_form user_new_form">
                <span>メールアドレス</span>
                <input name="email" value="<%= @email %>">
              </div>
              <div class="user_login_form user_new_form">
                <span>パスワード</span>
                <input name="password" value="<%= @password %>">
              </div>
              <div class="user_login_form user_edit_btn">
                <input type="submit" value="ログインする">
              </div>
            <% end %>
        </div>
    </div>
</div>
